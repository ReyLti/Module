<Page x:Class="pr20._102k_LazarevD.Pages.Autho"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr20._102k_LazarevD.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Autho">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="260"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <Label Content="Логин"/>
            <TextBox x:Name="txtLogin" Width="200" Height="40"/>
            <Label Content="Пароль"/>
            <PasswordBox x:Name="tbPassword" Height="40"/>
            <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Height="70">
                <Button x:Name="btnSignIn" Content="Войти" Click="btnSignIn_Click" Width="200" Height="40"></Button>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
